# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://admin:YOUR_MONGO_PASSWORD@mongodb:27017/agentic-orchestration?authSource=admin
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379

# Security
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
WEBHOOK_SECRET=your-webhook-secret-change-this
AI_WEBHOOK_SECRET=your-ai-webhook-secret-change-this

# Database Passwords
MONGO_PASSWORD=your-secure-mongo-password
REDIS_PASSWORD=your-secure-redis-password

# AI Provider API Keys
GEMINI_API_KEY=your-gemini-api-key
GROQ_API_KEY=your-groq-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
GLM_API_KEY=your-glm-api-key
KIMI_API_KEY=your-kimi-api-key
QWEN_API_KEY=your-qwen-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SENDGRID_API_KEY=your-sendgrid-api-key

# File Storage (Google Drive, Dropbox, OneDrive)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
WEB_PUSH_VAPID_PUBLIC=your-web-push-vapid-public-key
WEB_PUSH_VAPID_PRIVATE=your-web-push-vapid-private-key

# External Services
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
SLACK_WEBHOOK_URL=your-slack-webhook-url
NOTIFICATION_EMAIL=admin@yourdomain.com

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password

# Performance Optimization
UV_THREADPOOL_SIZE=20
NODE_OPTIONS=--max-old-space-size=4096 --optimize-for-size

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log